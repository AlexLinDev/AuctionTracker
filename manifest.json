{
  "manifest_version": 2,
 
  "name": "Auction Tracker",
  "description": "Log an auction listing.",
  "version": "0.1",

  "background": {
    "scripts":["eventPage.js"],
    "persistent": false
  },
 
  "browser_action": {
   "default_icon": "icon.png",
   "default_title": "Auction Tracker"
  },
  "permissions": [
   "activeTab", "http://*/*"
   ]
}